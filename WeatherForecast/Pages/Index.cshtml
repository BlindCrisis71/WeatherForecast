@page
@model IndexModel
@{
    ViewData["Title"] = "Home page";
}




<div class="row">
    <div>
        <ul>
            <li>
                <input id="city" type="text" />
                <input id="btn" type="button" value="Search" />
                <div><p id="result"></p></div>
            </li>
            <li class="current-day"><p>Today</p><img id="currentIcon" src="~/images/clear.png" /><p id="currentTemp">Current Temperature: </p><p id="currentSummary"></p><p id="currentHiLo">High/Low: </p><p id="currentChanceOfRain">Chance of Rain: %</p></li>
            <li class="future-day"><p>Tomorrow</p><img id="dayTwoIcon" src="~/images/clear.png" /><p id="dayTwoHiLo">Low/High: </p><p id="dayTwoChanceOfRain">Chance of Rain: %</p></li>
            <li class="future-day"><p>Day 3</p><img id="dayThreeIcon" src="~/images/clear.png" /><p id="dayThreeHiLo">Low/High: </p><p id="dayThreeChanceOfRain">Chance of Rain: %</p></li>
            <li class="future-day"><p>Day 4</p><img id="dayFourIcon" src="~/images/clear.png" /><p id="dayFourHiLo">Low/High: </p><p id="dayFourChanceOfRain">Chance of Rain: %</p></li>
            <li class="future-day"><p>Day 5</p><img id="dayFiveIcon" src="~/images/clear.png" /><p id="dayFiveHiLo">Low/High: </p><p id="dayFiveChanceOfRain">Chance of Rain: %</p></li>
        </ul>
    </div>
</div>
<script src="~/lib/signalr/dist/browser/signalr.js"></script>
<script src="~/js/weather.js"></script>
